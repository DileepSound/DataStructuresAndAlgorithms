package com.saveforgreen.datastructures.problem.linkedlist;

import com.saveforgreen.datastructures.vo.ListNode;

public class FindMiddleNodeSLL {


	public static void main(String[] args) {
    	ListNode param = new ListNode(1);
    	param.next = new ListNode(2);
    	param.next = new ListNode(3);
    	param.next = new ListNode(4);
    	param.next = new ListNode(5);
    	
	    System.out.println("Answer = " + middleNode(param);
	    
	    }
	
	public static ListNode middleNode(ListNode head) {
	    ListNode slow = head;
	    ListNode fast = head;
	    while(fast != null && fast.next != null){
	    slow = slow.next;
	    fast = fast.next.next;    
	    }    
	    return slow;    
	    }
	}